{
    "name": "RBC Case Competition",
    "version": "1.0",
    "description": "Build an Extension!",
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "manifest_version": 2,
    "browser_action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": [
            "popup.js"
        ]
    },
    "content_scripts": [
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "js": ["content.js"]
        },
        {
            "matches": [
                "http://*/*",
                "https://*/*"
            ],
            "css": ["bootstrap.min.css"],
            "js": ["cart.js"]
        }
    ]
}